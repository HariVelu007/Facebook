@model Facebook.Models.User

<div class="col-12">
    <div class="row justify-content-sm-center">
        <img src=@Url.Content(Model.Profile) class="img-thumbnail" style="height:300px"/>
    </div>
    
    <div class="mb-3">
        <label asp-for="UserName" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="UserName" placeholder="Name">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <label asp-for="DOB" class="form-label">Date of birth</label>
                <input type="date" class="form-control" asp-for="DOB">
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="mb-3">
                <label for="exampleFormControlInput11" class="form-label">Gender</label>
                <div class="row pl-3 pt-1">
                    <div class="form-check-inline">
                        <label class="form-check-label">

                            <input type="radio" id="chkMale" class="form-check-input" name="Gender" asp-for="Gender" checked="checked" value="Male">Male
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" id="chkFemale" class="form-check-input" name="Gender" asp-for="Gender" value="Female">Female
                        </label>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Address</label>
        <textarea class="form-control" asp-for="Address" rows="3"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <label asp-for="Mobile" class="form-label">City</label>
                <input type="text" class="form-control" asp-for="Mobile" placeholder="Mobile">
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="mb-3">
                <label asp-for="Character" class="form-label">Character</label>
                <input type="text" class="form-control" asp-for="Character" placeholder="Character">
                <span asp-validation-for="Character" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>